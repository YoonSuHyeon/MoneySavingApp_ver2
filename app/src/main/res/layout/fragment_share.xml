<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:background="@drawable/background"
    >
    <LinearLayout
        android:layout_weight="0.1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:orientation="horizontal"
        >

        <TextView
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:id="@+id/setting_help"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:layout_gravity="center"
            android:drawableStart="@drawable/help"
            android:drawableLeft="@drawable/help"

            android:text="@string/help"
            android:fontFamily="sans-serif"
            android:textSize="25dp" />
    </LinearLayout>

    <View

        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="#A8C4F1"
        android:layout_marginLeft="30dp"/>
    <LinearLayout
        android:layout_weight="0.1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="left"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/setting_logout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"


            android:drawableStart="@drawable/ic_exit_to_app_black_24dp"
            android:drawableLeft="@drawable/ic_exit_to_app_black_24dp"
            android:fontFamily="sans-serif"
            android:text="@string/logout"
            android:textSize="25dp"/>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="#A8C4F1"
        android:layout_marginLeft="30dp"/>
<LinearLayout
    android:layout_weight="0.8"
    android:layout_width="wrap_content"
    android:layout_height="0dp"/>

</LinearLayout>